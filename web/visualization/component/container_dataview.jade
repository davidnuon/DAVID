.ui.stacked.segment
	h4
		| {{dataviewmini.values.name}}: {{dataviewmini.values.description}}
	.ui.right.corner.label
		a(href="#/dataview/{{dataviewmini.values.dbKey}}/edit")
			i.icon.setting

	div(ng-repeat="dataDocument in dataviewmini.values.dataDocuments")
		.ui.ribbon.red.label
			| {{dataDocument.dataRepository.name}}: {{dataDocument.dataCall}}
		.ui.three.column.divided.grid
			.column(ng-repeat="viewPointValues in dataDocument.viewPoints")
				.ui.mini.list
					.item
						i.tasks.icon
						.content
							a.header {{viewPointValues.name}}
							.description {{viewPointValues.description}}

.ui.fluid.four.item.menu
	a.item.active.green(href="#/dataview/{{dataviewmini.values.dbKey}}/view")
		| View
	a.item.active.red(ng-click="dataviewmini.delete()")
		| Delete
	a.item.active.black
		| Share
	a.item.active.black
		| Unshare

